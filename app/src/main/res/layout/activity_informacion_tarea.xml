<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCACA"
    tools:context=".Informacion_Tarea">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1EDED"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="InformaciÃ³n"
            android:textColor="#07078C"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="165dp"
        android:background="@drawable/rounded_background"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/topLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/labelsLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:text="Titulo:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:text="Fecha de inicio:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:text="Fecha de fin:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelTipoTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="14dp"
                android:text="Tipo de tarea:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelURLTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="URL de la tarea:"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarea 1"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 de junio del 2023"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 de junio del 2023"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textTipoTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aumentar nota"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textURLTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://upb"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>